        transition: all 0.3s ease;
    }
    
    .project-image {
        height: 250px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .project-item:hover .project-image img {
        transform: scale(1.05);
    }
    
    /* Academic projects */
    .academic-project {
        transition: all 0.3s ease;
    }
    
    .academic-project:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transform: translateY(-5px);
    }
    
    .project-icon {
        width: 40px;
        height: 40px;
        font-size: 1.2rem;
    }
    
    /* Technologies */
    .tech-item {
        cursor: default;
        transition: all 0.3s ease;
    }
    
    .tech-item:hover {
        transform: translateY(-5px);
    }
    
    .tech-name {
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation pour les éléments au scroll
        const animateElements = document.querySelectorAll('.project-item, .academic-project, .tech-item');
        
        // Helper function to check if an element is in viewport
        function isInViewport(element) {
            const rect = element.getBoundingClientRect();
            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        }
        
        // Initial check for elements in viewport
        animateElements.forEach(element => {
            if (isInViewport(element)) {
                element.classList.add('animate__animated', 'animate__fadeInUp');
            }
        });
        
        // Check on scroll
        window.addEventListener('scroll', () => {
            animateElements.forEach(element => {
                if (isInViewport(element) && !element.classList.contains('animate__animated')) {
                    element.classList.add('animate__animated', 'animate__fadeInUp');
                }
            });
        });
        
        // Smooth scrolling pour les ancres
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    });
</script>
