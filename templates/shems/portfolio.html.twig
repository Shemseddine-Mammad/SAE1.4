{% extends 'base.html.twig' %}

{% block title %}Mon E-Portfolio{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">E-Portfolio de Compétences</h1>
    
    <!-- Compétences Techniques -->
    <div class="card mb-4">
        <div class="card-header">
            <h2>Compétences Techniques</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Administration Systèmes -->
                <div class="col-md-4 mb-3">
                    <h4>Administration Systèmes</h4>
                    <div class="progress mb-2">
                        <div class="progress-bar skills-bar" data-width="80" role="progressbar" style="width: 0%">Linux</div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar skills-bar" data-width="50" role="progressbar" style="width: 0%">Windows Server</div>
                    </div>
                </div>

                <!-- Réseaux -->
                <div class="col-md-4 mb-3">
                    <h4>Réseaux</h4>
                    <div class="progress mb-2">
                        <div class="progress-bar skills-bar" data-width="50" role="progressbar" style="width: 0%">TCP/IP</div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar skills-bar" data-width="75" role="progressbar" style="width: 0%">Cisco</div>
                    </div>
                </div>

                <!-- Développement -->
                <div class="col-md-4 mb-3">
                    <h4>Développement</h4>
                    <div class="progress mb-2">
                        <div class="progress-bar skills-bar" data-width="80" role="progressbar" style="width: 0%">Python</div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar skills-bar" data-width="20" role="progressbar" style="width: 0%">C</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Style pour les cartes qui se retournent et les animations -->
    <style>
        .flip-card {
            background-color: transparent;
            width: 300px;
            height: 200px;
            perspective: 1000px;
            margin: 15px;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.8s;
            transform-style: preserve-3d;
            cursor: pointer;
        }

        .flip-card.is-flipped .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px;
        }

        .flip-card-front {
            background-color: #000; /* Couleur noire */
            color: white;
        }

        .flip-card-back {
            background-color: #000; /* Couleur noire */
            color: white;
            transform: rotateY(180deg);
        }

        .skills-bar {
            transition: width 2s;
        }
        
        /* Style pour le bouton dans les cartes */
        .card-button {
            margin-top: 15px;
            padding: 8px 15px;
            background-color: #0d6efd;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        
        .card-button:hover {
            background-color: #0b5ed7;
            text-decoration: none;
            color: white;
        }
    </style>

    <!-- Section des cartes qui se retournent -->
    <div class="card mb-4">
        <div class="card-header">
            <h2>Apprentissage Critiques</h2>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center flex-wrap">
                <!-- Première carte -->
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Algorithme</h3>
                            <p>Programmation</p>
                        </div>
                        <div class="flip-card-back">
                            <h3>Preuve</h3>
                            <p>Traduction d'algorithme en Python</p>
                            <a href="{{ asset('preuve/AC13_03Traduire_un_algorithme_dans_un_langage_et_pour_un_environnement_donné.pdf') }}" 
                               class="card-button" target="_blank">Voir le document</a>
                        </div>
                    </div>
                </div>

                <!-- Deuxième carte -->
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Machine Virtuelle</h3>
                            <p>Configuration</p>
                        </div>
                        <div class="flip-card-back">
                            <h3>Preuve</h3>
                            <p>client Ubuntu, Client Windows 7, serveur Ubuntu</p>
                            <a href="{{ asset('preuve/AC11_06.pdf') }}" 
                               class="card-button" target="_blank">Voir le document</a>
                        </div>
                    </div>
                </div>

                <!-- Troisième carte -->
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Système D'Exploitations</h3>
                            <p>Terminal</p>
                        </div>
                        <div class="flip-card-back">
                            <h3>Preuve</h3>
                            <p>Utilisation de différente commande dans des terminals Linux ou Windows</p>
                            <a href="{{ asset('preuve/AC13_01.pdf') }}" 
                               class="card-button" target="_blank">Voir le document</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script pour le retournement des cartes -->
    <script>
        document.querySelectorAll('.flip-card').forEach(card => {
            card.addEventListener('click', () => {
                card.classList.toggle('is-flipped');
            });
        });

        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const skillsBars = document.querySelectorAll('.skills-bar');
                
                skillsBars.forEach(function(bar, index) {
                    const targetWidth = bar.getAttribute('data-width') + '%';
                    
                    // Animation avec délai progressif pour chaque barre
                    setTimeout(function() {
                        bar.style.width = targetWidth;
                    }, index * 200); // 200ms de délai entre chaque animation
                });
            }, 500); // Démarrer l'animation après 500ms du chargement de la page
        });
        
        // Empêcher la propagation des clics sur les boutons pour éviter de retourner la carte
        document.querySelectorAll('.card-button').forEach(button => {
            button.addEventListener('click', (event) => {
                event.stopPropagation();
            });
        });
    </script>
</div>
{% endblock %}