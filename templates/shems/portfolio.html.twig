{% extends 'base.html.twig' %}

{% block title %}Mon E-Portfolio{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">E-Portfolio de Compétences</h1>
    
    <!-- Compétences Techniques -->
    <div class="card mb-4">
        <div class="card-header">
            <h2>Compétences Techniques</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Administration Systèmes -->
                <div class="col-md-4 mb-3">
                    <h4>Administration Systèmes</h4>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 50%">Linux</div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 50%">Windows Server</div>
                    </div>
                </div>

                <!-- Réseaux -->
                <div class="col-md-4 mb-3">
                    <h4>Réseaux</h4>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 30%">TCP/IP</div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 35%">Cisco</div>
                    </div>
                </div>

                <!-- Développement -->
                <div class="col-md-4 mb-3">
                    <h4>Développement</h4>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 80%">Python</div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 20%">C</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Style pour les cartes qui se retournent -->
    <style>
        .flip-card {
            background-color: transparent;
            width: 300px;
            height: 200px;
            perspective: 1000px;
            margin: 15px;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.8s;
            transform-style: preserve-3d;
            cursor: pointer;
        }

        .flip-card.is-flipped .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px;
        }

        .flip-card-front {
            background-color: #007bff;
            color: white;
        }

        .flip-card-back {
            background-color: #0056b3;
            color: white;
            transform: rotateY(180deg);
        }
    </style>

    <!-- Section des cartes qui se retournent -->
    <div class="card mb-4">
        <div class="card-header">
            <h2>Mes Projets</h2>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center flex-wrap">
                <!-- Première carte -->
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Algorithme</h3>
                            <p>Programmation</p>
                        </div>
                        <div class="flip-card-back">
                            <a href="{{ asset('preuve/AC13_03Traduire_un_algorithme_dans_un_langage_et_pour_un_environnement_donné.pdf') }}" target="_blank"> <h3>Preuve</h3> </a>
                            <p>Traduction d'algorithme en Python </p>
                        </div>
                    </div>
                </div>

                <!-- Deuxième carte -->
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Machine Virtuelle </h3>
                            <p>Configuration</p>
                        </div>
                        <div class="flip-card-back">
                        <a href="{{ asset('preuve/AC11_06.pdf') }}" target="_blank"> <h3>Preuve</h3> </a>
                            <p>client Ubuntu, Client Windows 7, serveur Ubuntu</p>
                        </div>
                    </div>
                </div>

                <!-- Troisième carte -->
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Système D'Exploitations</h3>
                            <p>Terminal</p>
                        </div>
                        <div class="flip-card-back">
                            <a href="{{ asset('preuve/AC13_01.pdf') }}" target="_blank"> <h3>Preuve</h3> </a>
                            <p>Utilisation de différente commande dans des terminals Linux ou Windows</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script pour le retournement des cartes -->
    <script>
        document.querySelectorAll('.flip-card').forEach(card => {
            card.addEventListener('click', () => {
                card.classList.toggle('is-flipped');
            });
        });
    </script>
</div>
{% endblock %}