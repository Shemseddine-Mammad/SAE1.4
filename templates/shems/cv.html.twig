{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des barres de progression pour les langues
    setTimeout(function() {
        const languageBars = document.querySelectorAll('.language-bar');
        
        languageBars.forEach(function(bar, index) {
            const targetWidth = bar.getAttribute('data-width') + '%';
            
            // Animation avec délai progressif pour chaque barre
            setTimeout(function() {
                // Animation fluide
                bar.style.transition = 'width 1.5s ease-in-out';
                bar.style.width = targetWidth;
            }, index * 300); // 300ms de délai entre chaque animation
        });
    }, 500); // Démarrer l'animation après 500ms du chargement de la page
    
    // Initialisation du gestionnaire de téléchargement
    setupDownloadForm();
});

// Fonction pour initialiser le gestionnaire de formulaire (séparation des responsabilités)
function setupDownloadForm() {
    const cvDownloadForm = document.getElementById('cvDownloadForm');
    
    if (cvDownloadForm) {
        // On supprime d'abord tous les écouteurs existants (si présents)
        // puis on ajoute notre nouvel écouteur
        const newForm = cvDownloadForm.cloneNode(true);
        cvDownloadForm.parentNode.replaceChild(newForm, cvDownloadForm);
        
        newForm.addEventListener('submit', function(e) {
            e.preventDefault(); // Empêche le comportement par défaut du formulaire
            
            // Récupération des valeurs du formulaire
            const nom = document.getElementById('nom').value;
            const prenom = document.getElementById('prenom').value;
            const email = document.getElementById('email').value;
            const format = document.getElementById('selectedFormat').value;
            
            console.log(`Téléchargement demandé par ${prenom} ${nom} (${email}) en format ${format}`);
            
            // Utilisation de setTimeout pour éviter les problèmes de timing
            setTimeout(function() {
                const filePath = `/cv/CV.${format}`;
                downloadFile(filePath, `cv.${format}`);
                
                // Ferme le modal après un court délai
                setTimeout(function() {
                    const modalElement = document.getElementById('cvModal');
                    const modal = bootstrap.Modal.getInstance(modalElement);
                    if (modal) {
                        modal.hide();
                    }
                }, 100);
            }, 100);
        });
    }
}

// Fonction séparée pour le téléchargement
function downloadFile(url, filename) {
    const link = document.createElement('a');
    link.href = url;
    link.download = filename;
    link.style.display = 'none';
    document.body.appendChild(link);
    link.click();
    
    // Suppression après un délai pour s'assurer que le téléchargement a commencé
    setTimeout(function() {
        document.body.removeChild(link);
    }, 100);
}
</script>
